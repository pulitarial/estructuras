//ej 1//
#include <stdio.h>

struct fichero
{
    char empresa [10];
    int legajo;
    int dependencia_trabajo;
    float horas_trabajadas;
}a[2];

int main()
{
    int i=0;
    for(i=0;i<2;i++)
       { printf("empresa:\n");
        scanf("%s", &a[i].empresa);
        printf("legajo:\n");
        scanf("%d", &a[i].legajo);
        printf("dep de trabajo:\n");
        scanf("%d", &a[i].dependencia_trabajo);
        printf("horas trabajadas: \n");
        scanf("%f", &a[i].horas_trabajadas);
       }
    
    for (i=0;i<2;i++)
        {printf("empresa: %s\n", a[i].empresa);
        printf("legajo: %d\n", a[i].legajo);
        printf("dependencia_trabajo: %d\n", a[i].dependencia_trabajo);
        printf("horas_trabajadas: %f\n", a[i].horas_trabajadas);
        }

    return 0;
}
