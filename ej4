//ej 4//
#include <stdio.h>

struct fichero
{
    char nombre [30];
    int nota;
}a[2];

int main()
{
    int i=0;
    for(i=0;i<2;i++)
       { printf("nombre:\n");
        scanf("%s", &a[i].nombre);
        printf("nota:\n");
        scanf("%i", &a[i].nota);
       }
    
    for (i=0;i<2;i++)
        { if (a[i].nota>=7)
            printf("los aprobados son: %s\n", &a[i].nombre);
        }

    return 0;
}
